# ==================================
# DATABASE
# ==================================
DATABASE_URL="postgresql://user:password@localhost:5432/okesports?schema=public"

# ==================================
# APP
# ==================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# ==================================
# AUTH & SECURITY
# ==================================
# Generate with: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-key-min-32-characters"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-min-32-characters"

# Generate with: openssl rand -hex 32 (must be exactly 32 bytes)
ENCRYPTION_KEY="your-encryption-key-exactly-32-bytes-hex"

# ==================================
# MERCADO PAGO MARKETPLACE
# ==================================
# OAuth Credentials (from Mercado Pago Developer Panel)
MP_CLIENT_ID="your-mercadopago-client-id"
MP_CLIENT_SECRET="your-mercadopago-client-secret"

# OkÃª Sports Account Token (to receive split payments)
MP_ACCESS_TOKEN="APP_USR-your-okesports-access-token"
MP_PUBLIC_KEY="APP_USR-your-okesports-public-key"

# Webhook Secret (for signature validation)
MP_WEBHOOK_SECRET="your-webhook-secret-key"

# ==================================
# EMAIL (Resend)
# ==================================
RESEND_API_KEY="re_your_resend_api_key"
RESEND_FROM_EMAIL="[email protected]"

# ==================================
# STORAGE (AWS S3 or Cloudflare R2)
# ==================================
# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="okesports-uploads"

# OR Cloudflare R2 (S3-compatible)
# R2_ACCOUNT_ID="your-r2-account-id"
# R2_ACCESS_KEY_ID="your-r2-access-key"
# R2_SECRET_ACCESS_KEY="your-r2-secret-key"
# R2_BUCKET_NAME="okesports-uploads"

# ==================================
# CACHE & SESSIONS (Redis/Upstash)
# ==================================
REDIS_URL="redis://localhost:6379"
# OR Upstash (for production)
# UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# ==================================
# MONITORING (Sentry)
# ==================================
SENTRY_DSN="https://xxx@sentry.io/xxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxx@sentry.io/xxx"

# ==================================
# ANALYTICS (PostHog or Mixpanel)
# ==================================
NEXT_PUBLIC_POSTHOG_KEY="phc_your_posthog_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# OR Mixpanel
# NEXT_PUBLIC_MIXPANEL_TOKEN="your_mixpanel_token"

# ==================================
# NODE ENVIRONMENT
# ==================================
NODE_ENV="development"
